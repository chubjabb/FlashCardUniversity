// Firestore rules: allow public reads, authenticated creates with required fields
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /decks/{docId} {
      allow read: if true;
      allow create: if request.auth != null
                    && request.resource.data.keys().hasAll(['filename','url','size','title','uploader'])
                    && request.resource.data.uploader == request.auth.uid;
      // no updates or deletes by clients
      allow update, delete: if false;
    }
  }
}
